{
    "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "enklave",
    "version": "0.1.0",
    "identifier": "fr.xen0xys.enklave",
    "build": {
        "frontendDist": "../.output/public",
        "devUrl": "http://localhost:3000",
        "beforeDevCommand": "bun dev",
        "beforeBuildCommand": "bun run build"
    },
    "app": {
        "windows": [
            {
                "title": "Enklave",
                "width": 1280,
                "height": 720,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
